header {
	position: fixed;
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 60px;
	padding: 0 10%;
	z-index: 10;
	.logo {
		a {
			font-weight: 600;
			font-size: 2rem;
			text-decoration: none;
			color: {{settings.header_logo_color}};
			text-transform: uppercase;
			display: block;
		}
	}
	.menu {
		display: flex;
		margin-bottom: 0;
		.open-mobile-menu {
			display: none;
		}
		a {
			display: inline-block;
			font-weight: 400;
			text-decoration: none;
			color: {{settings.header_menu_links}};
			text-transform: uppercase;
		}
		.link {
			padding: 20px;
			.site-header__cart {
				padding: 0;
			}
			.site-header__cart-count {
				right: -4px;
				top: -3px;
			}
		}
		.dropdown {
			position: relative;
			&:hover {
				.sub-menu {
					display: block;
				}
			}
			.sub-menu {
				&:hover {
					display: block;
				}
				display: none;
				position: absolute;
				transform: translate3d(0, 10px,0);
				background: white;
				color: red;
				min-width: 150px;
				border-radius: 3px;
				a {
					color: black;
					display: block;
					padding: 10px;
				}
			}
		}
	}
	.menu.mobile-mode {
		.link {
			display: none;
		}
		.open-mobile-menu {
			display: block;
			color: {{settings.header_menu_links}};
			display: block;
			height: 50px;
			width: 50px;
			display: flex;
			justify-content: center;
			align-items: center;
			font-size: 1.5rem;
			cursor: pointer;
		}
	}
}
.jumbo-section {
	background: black;
	height: 100vh;
	width: 100%;
	position: relative;
	margin-bottom: 25px;
	overflow: hidden;
	.bg-image {
		background: url("jumbobg.jpg");
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		height: 100%;
		width: 100%;
		position: absolute;
		z-index: 1;
		top: 0;
	}
	.bg-video {
		height: 100%;
		width: 100%;
		position: absolute;
		z-index: 1;
		top: 0;
		transform: scale(1.5);
	}
	.transparent-color {
		background: rgba(66,53,88, .8);
		height: 100vh;
		width: 100%;
		position: absolute;
		z-index: 2;
		top: 0;
	}
	.titles {
		position: absolute;
		z-index: 3;
		display: flex;
		flex-direction: column;
		height: 100vh;
		justify-content: center;
		h1 {
			font-size: 7rem;
			color: {{settings.highlight_color}};
			font-weight: 900;
			text-transform: uppercase;
			transform: translate3d(100px, 0,0);
		}
		h2 {
			font-size: 5rem;
			color: white;
			font-weight: 200;
			text-transform: uppercase;
			transform: translate3d(135px, 0,0);
		}
	}
	.state {
		background: white;
		position: absolute;
		height: 12%;
		z-index: 3;
		width: 100%;
		bottom: 0;
		display: flex;
		align-items: center;
		.number {
			font-size: 5rem;
			transform: translate3d(50px, 0, 0);
		}
	}
	.store-info {
		background: #0cdbdd;
		position: absolute;
		height: 20%;
		z-index: 3;
		width: 75%;
		bottom: 0;
		right: 0;
		display: flex;
		a {
			width: 25%;
			display: inline-block;
		}
		img {
			height: 100%;
			width: 100%;
			object-fit: cover;
			cursor: pointer;
			filter: saturate(0);
			transition: all .4s ease-in-out;
			&:hover {
				filter: saturate(100%);
			}
		}
	}
}
.twoCollections-section {
	margin-bottom: 25px;
	overflow: hidden;
	.left-c {
		.left-c-img {
			width: 100%;
			position: relative;
			.overlay {
				position: absolute;
				width: 100%;
				opacity: .5;
				height: 100%;
			}
			img {
				width: 100%;
				height: 500px;
				object-fit: cover;
				object-position: center;
			}
		}
		.collection-title {
			display: flex;
			height: 100%;
			width: 100%;
			position: absolute;
			top: 0;
			left: 0;
			justify-content: center;
			align-items: flex-end;
			flex-direction: column;
			font-size: 3.3rem;
			font-weight: 900;
			text-transform: uppercase;
			span {
				line-height: 1;
				transform: translate3d(-25px, 50px,0);
			}
		}
	}
	.right-c {
		.right-c-bg {
			background: #dddfe4;
			height: 500px;
			display: flex;
			justify-content: center;
			align-items: center;
			.right-c-img {
				height: 300px;
				width: 300px;
				img {
					height: 100%;
					width: 100%;
					object-fit: cover;
				}
				.collection-title {
					span {
						font-size: 3.5rem;
						font-weight: 900;
						text-transform: uppercase;
						color: white;
						transform: translate3d(-68px, -100px, 0);
						display: block;
					}
				}
			}
		}
	}
}
.horizontal-sale-section {
	.overlay {
		height: 100%;
		width: 100%;
		background: rgba(0,0,0, .5);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		.percent-number {
			font-family: {{ horizontal_sale_font.family }}, 'Avenir Next Condensed', 'Source Sans Pro', Arial, Helvetica, sans-serif;
			color: white;
			font-size: 20rem;
			font-weight: 900;
			line-height: 1;
		}
		.title {
			font-family: {{ horizontal_sale_font.family }}, 'Avenir Next Condensed', 'Source Sans Pro', Arial, Helvetica, sans-serif;
			color: white;
			font-size: 3rem;
			font-weight: 900;
			line-height: 1;
			letter-spacing: 20px;
			margin-bottom: 1rem;
		}
		a {
			display: block;
			color: white;
			font-size: 1.2rem;
			font-weight: 400;
			padding: 15px 60px;
			border: 2px solid white;
			text-transform: uppercase;
			text-decoration: none;
			transition: all .3s ease-in-out;
			&:hover {
				color: black;
				background: {{settings.highlight_color}};
			}
		}
	}
}
.products-group-section {
	padding: 50px 0 0 0;
	overflow: hidden;
	div[class*="col"] {
		margin-bottom: 50px;
	}
	h2 {
		font-size: 2rem;
		text-align: center;
		font-weight: 700;
		margin-bottom: 50px;
	}
	.product-bg {
		background: white;
		height: 100%;
		min-height: 300px;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		position: relative;
		margin-bottom: 50px;
		.product-img {
			width: 80%;
		}
		.overlay {
			background: #1b1b1b;
			position: absolute;
			height: 100%;
			width: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
			flex-direction: column;
			transition: all .2s ease-in-out;
			opacity: 0;
			cursor: pointer;
			color: {{settings.highlight_color}};
			&:hover {
				opacity: 1;
			}
			.product-title {
				font-weight: 600;
				text-align: center;
				font-size: 1.3rem;
			}
			.product-price {
				font-weight: 600;
			}
		}
	}
}
footer {
	background: #1b1b1b;
	padding: 50px 0;
	overflow: hidden;
	.footer-menu {
		.menu-title {
			color: {{settings.highlight_color}};
			font-size: 1.2rem;
			text-transform: uppercase;
			margin-bottom: 10px;
			display: block;
		}
		a {
			color: white;
		}
	}
	.social-title {
		color: {{settings.highlight_color}};
		font-size: 1.2rem;
		text-transform: uppercase;
		margin-bottom: 10px;
		display: block;
	}
	.social-icons {
		display: flex;
		li {
			margin-right: 15px;
		}
		a {
			display: flex;
			height: 50px;
			width: 50px;
			justify-content: center;
			align-items: center;
			background: white;
			border-radius: 50%;
			font-size: 1.2rem;
			text-decoration: none;
			color: black;
			transition: all .3s ease-in-out;
			&:hover {
				color: {{settings.highlight_color}};
				background: black;
			}
		}
	}
	.address {
		color: #dddfe4;
		text-align: center;
		display: block;
		width: 100%;
	}
}
.content-wrapper {
	padding-top: 100px;
	padding-bottom: 100px;
}
#mobile-menu {
	background: {{settings.header_bg_color}};
	height: 100vh;
	width: 100vw;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 20;
	padding: 20px;
	display: none;
	transform: translate3d(-100%, 0,0);
	.logo {
		font-size: 2rem;
		text-align: center;
		position: relative;
		a {
			color: {{settings.header_logo_color}};
			text-transform: uppercase;
		}
	}
	.menu {
		li {
			margin-bottom: 1rem;
		}
		>li {
			>a {
				color: {{settings.header_menu_links}};
				font-size: 1.2rem;
				display: block;
				margin-bottom: 15px;
				text-align: center;
				padding-bottom: 10px;
			}
		}
		>li.dropdown {
			.sub-menu {
				a {
					color: {{settings.header_menu_links}};
					font-size: 1.2rem;
					display: inline-block;
					border-bottom: none;
					padding: 10px 7px;
				}
			}
		}
	}
}
#mobile-menu.active {
	display: block;
}
.close-mobile-menu {
	height: 50px;
	width: 50px;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 2rem;
	color: {{settings.header_menu_links}};
	position: absolute;
	right: 0;
	top: -5px;
	cursor: pointer;
}
@media (min-width: 768px) and (max-width: 991px) {
	.twoCollections-section {
		.left-c {
			.collection-title {
				span {
					font-size: 2.8rem;
				}
			}
		}
		.right-c {
			.right-c-bg {
				.right-c-img {
					.collection-title {
						span {
							font-size: 2.8rem;
						}
					}
				}
			}
		}
	}
	.horizontal-sale-section {
		.overlay {
			.percent-number {
				font-size: 12rem;
			}
		}
	}
}
